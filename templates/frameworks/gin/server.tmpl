package app

import (
	"fmt"
	"log"
	"net/http"

	"github.com/gin-gonic/gin"
	"{{.ModuleName}}/internal/deps"
)

// Start starts the Gin HTTP server
func Start(cfg *deps.Config) error {
	if cfg.Gin == nil {
		return fmt.Errorf("gin config is required")
	}

	// Set Gin mode
	if cfg.Gin.Mode != "" {
		gin.SetMode(cfg.Gin.Mode)
	}

	r := gin.Default()

	// Health check endpoint
	r.GET("/health", func(c *gin.Context) {
		c.JSON(http.StatusOK, gin.H{
			"status": "ok",
		})
	})

	// Root endpoint
	r.GET("/", func(c *gin.Context) {
		c.String(http.StatusOK, "{{ .ProjectName }} running (gin)!")
	})

	addr := cfg.Gin.GetAddr()
	log.Printf("Starting Gin server on %s", addr)
	if err := r.Run(addr); err != nil {
		return fmt.Errorf("failed to start gin server: %w", err)
	}
	return nil
}
